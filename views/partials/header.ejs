<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Adjective Collector</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,400;0,500;0,700;0,900;1,300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="css/styles.css">
  </head>
  <body>
    <div class="container">
      <div class="row" id="navbar-row">
        <div class="col-xs-12 col-lg-offset-1 col-lg-10">
          <nav class="navbar navbar-default navbar-inverse">
            <div>
              <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>
              </div>
              <div class="collapse navbar-collapse" id="navbar-collapse">
                <ul class="nav navbar-nav">
                  <li><a href="/">Get Adjective Definition<span class="sr-only">(current)</span></a></li>
                  <li><a href="/user-adjective-collection">Adjective Collection</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                  <% if (currentUser) { %>
                    <li id="logged-in-name"> <%=currentUser.username%> is logged in</li>
                    <li><a href="/log-out">Log Out</a></li>
                  <% } else { %>
                    <li><a href="/sign-in">Sign In</a></li>
                    <li><a href="/create-account">Create Account</a></li>
                  <% } %>
                </ul>
              </div>
            </div>
          </nav>
        </div>
      </div>
    </div>

    <div class="container" id="logo-container">
      <div class="row" id="logo-row">
        <div class="col-xs-12 col-md-offset-2 col-md-8">
          <div>
            <a href="/"><img src="/images/adjective-collector-logo.png" alt="adjective collector logo" class="img-responsive"></a>
          </div>
        </div>
      </div>

      <% if (errorFlashMessages.length > 0) { %>
        <div class="row flash-message-row">
          <div class="col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-3 col-md-6">
            <% errorFlashMessages.forEach(function (msg) { %>
              <div class="alert alert-danger" role="alert">
                <p><%=msg%></p>
              </div>
            <% }) %>
          </div>
        </div>
      <% } %>

      <% if (successFlashMessages.length > 0) { %>
        <div class="row flash-message-row" id="flash-success-message-row">
          <div class="col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-3 col-md-6">
            <% successFlashMessages.forEach(function (msg) { %>
              <div class="alert alert-success" role="alert">
                <p><%=msg%></p>
              </div>
            <% }) %>
          </div>
        </div>
      <% } %>
    </div>
